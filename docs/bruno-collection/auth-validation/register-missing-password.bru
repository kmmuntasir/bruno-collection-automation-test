meta {
  name: Register Without Password
  type: http
  seq: 14
}

post {
  url: {{baseUrl}}/auth/register
  body: json
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "email": "test@example.com"
  }
}

script:pre-request {
  console.log("Testing registration without password field");
}

script:post-response {
  console.log("Register without password status:", res.status);
  console.log("Response time:", res.responseTime + "ms");
  
  if (res.status === 422) {
    console.log("✅ Missing password properly rejected");
  } else {
    console.error("❌ Expected 422 but got:", res.status);
  }
}

tests {
  test("Should return 422 Unprocessable Entity", () => {
    expect(res.status).to.equal(422);
  });
  
  test("Should return error message about missing password", () => {
    expect(res.body).to.have.property("error");
    expect(res.body.error).to.be.a("string");
    expect(res.body.error.toLowerCase()).to.contain("password");
  });
  
  test("Should not create user", () => {
    expect(res.body).to.not.have.property("id");
  });
  
  test("Response time should be reasonable", () => {
    expect(res.responseTime).to.be.below(1000);
  });
}

assert {
  res.status: eq 422
  res.body.error: isString
  res.responseTime: lt 1000
}
