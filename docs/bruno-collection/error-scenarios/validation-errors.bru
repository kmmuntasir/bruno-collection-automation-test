meta {
  name: Test Validation Errors
  type: http
  seq: 12
}

post {
  url: {{baseUrl}}/auth/register
  body: json
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "email": "invalid-email",
    "password": "123"
  }
}

script:pre-request {
  console.log("Testing registration with invalid data");
}

script:post-response {
  console.log("Validation test status:", res.status);
  console.log("Response time:", res.responseTime + "ms");
  
  if (res.status === 422) {
    console.log("✅ Validation errors properly handled");
  } else {
    console.error("❌ Expected 422 but got:", res.status);
  }
}

tests {
  test("Should return 422 Unprocessable Entity", () => {
    expect(res.status).to.equal(422);
  });
  
  test("Should return error message", () => {
    expect(res.body).to.have.property("error");
    expect(res.body.error).to.be.a("string");
  });
  
  test("Should not create user", () => {
    expect(res.body).to.not.have.property("id");
    expect(res.body).to.not.have.property("email");
  });
  
  test("Response time should be reasonable", () => {
    expect(res.responseTime).to.be.below(1500);
  });
}

assert {
  res.status: eq 422
  res.body.error: isString
  res.responseTime: lt 1500
}
